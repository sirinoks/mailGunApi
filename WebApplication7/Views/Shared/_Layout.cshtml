<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/main.css")

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

        @RenderSection("logs", false)
        @RenderSection("send", false)
        @RenderSection("index", false)

    </head>
    <body>
        <div class="navbar navbar-dark bg-dark">
            <div class="container">
                <div class="navbar-brand">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Email Api", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar navbar-expand">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link active" })</li>
                        <li class="nav-item">@Html.ActionLink("Send", "Send", "Home", new { @class = "nav-link active" })</li>
                        <li class="nav-item">@Html.ActionLink("Logs", "Logs", "Home", new { @class = "nav-link active" })</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
            <hr />
            <footer>
            </footer>
        </div>

    </body>
</html>
